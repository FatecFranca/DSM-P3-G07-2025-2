generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @map("_id") @db.ObjectId @default(auto())
  username  String   @unique
  password  String
}

model Gym {
  id        String   @id @map("_id") @db.ObjectId @default(auto())
  name      String
  address   String
  phone     String
  capacity  Int
  occupancy Int    
}

model Client {
  id        String   @id @map("_id") @db.ObjectId @default(auto())
  name      String
  email     String
  phone     String
  gymName   String
}